		"dotenv": "8.2.0",
		"express": "4.17.1",
		"jsonwebtoken": "8.5.1",
		"mailgen": "2.0.14",
		"mongodb": "3.6.3",
		"mongoose": "5.11.8",
		"mongoose-aggregate-paginate-v2": "1.0.42",
		"morgan": "^1.10.0",
		"nodemailer": "6.4.17",
		"validator": "13.5.2"
	}
